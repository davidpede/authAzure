{
  "name": "authAzure",
  "lowCaseName": "authazure",
  "description": "An Azure Active Directory Extra for MODX Revolution",
  "author": "David Pede <dev@tasian.media> <https://twitter.com/davepede>",
  "version": "1.0.0-beta3",
  "package": {
    "actions": [
      {
        "id": 1,
        "controller": "index"
      }
    ],
    "elements": {
      "categories": [
        {
          "name": "Debug"
        }
      ],
      "plugins": [
        {
          "name": "authAzure",
          "file": "plugin.authazure.php",
          "events": [
            "OnHandleRequest",
            "OnWebAuthentication"
          ]
        }
      ],
      "chunks": [
        {
          "name": "aazLoginTpl",
          "file": "chunk.login.tpl"
        },{
          "name": "aazLogoutTpl",
          "file": "chunk.logout.tpl"
        }
      ],
      "snippets": [
        {
          "name": "authAzureLogin",
          "file": "snippet.authazure.login.php",
          "properties": [
            {
              "name": "loginTpl",
              "description": "authazure.login.loginTpl_desc",
              "type": "textfield",
              "value": "aazLoginTpl"
            },{
              "name": "logoutTpl",
              "description": "authazure.login.logoutTpl_desc",
              "type": "textfield",
              "value": "aazLogoutTpl"
            }
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "client_id",
        "type": "textfield",
        "area": "Azure Configuration",
        "value": ""
      },{
        "key": "client_secret",
        "type": "textfield",
        "area": "Azure Configuration",
        "value": ""
      },{
        "key": "redirect_url",
        "type": "textfield",
        "area": "Azure Configuration",
        "value": ""
      },{
        "key": "openid_config_url",
        "type": "textfield",
        "area": "Azure Configuration",
        "value": ""
      },{
        "key": "s2s_configs",
        "type": "textfield",
        "area": "Azure Configuration",
        "value": ""
      },{
        "key": "scopes",
        "type": "textfield",
        "area": "Azure Configuration",
        "value": "openid,email,profile,offline_access,https://graph.microsoft.com/User.Read,https://graph.microsoft.com/Directory.Read.All"
      },{
        "key": "enable_sso",
        "type": "combo-boolean",
        "area": "Single Sign On",
        "value": "0"
      },{
        "key": "enable_seamless",
        "type": "combo-boolean",
        "area": "Single Sign On",
        "value": "0"
      },{
        "key": "enable_cookie_lifetime",
        "type": "combo-boolean",
        "area": "Single Sign On",
        "value": "0"
      },{
        "key": "enable_group_sync",
        "type": "modx-combo-usergroup",
        "area": "User Groups",
        "value": ""
      },{
        "key": "default_groups",
        "type": "textfield",
        "area": "User Groups",
        "value": ""
      },{
        "key": "protected_groups",
        "type": "textfield",
        "area": "User Groups",
        "value": ""
      },{
        "key": "login_resource_id",
        "type": "numberfield",
        "area": "Resources",
        "value": ""
      },{
        "key": "profile_photo_dir",
        "type": "textfield",
        "area": "User Profiles",
        "value": ""
      }
    ]
  },
  "database": {
    "tables": [
      "AazProfile"
    ]
  },
  "build": {
    "readme": "docs/readme.txt",
    "license": "docs/license.txt",
    "changelog": "docs/changelog.txt",
    "resolver": {
      "after": [
        "resolve.synctables.php"
      ]
    }
  }
}
